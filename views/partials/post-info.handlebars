<!--create partial(html) for how posts will appear-->
<div class="post-item">
    <article class="post">
        <div class="title" style="display: flex; justify-content: space-between; align-items: center; height: 3rem;">
            <a href="/post/{{id}}" target="_blank">{{title}}</a>
            <a href="{{post_url}}" target="_blank">{{post_url}}</a>
        </div>
        <div class="content">
            {{ body }}
        </div>
        <div class="meta">
            posted by {{user.username}} on {{format_date createdAt}}
            || {{vote_count}} vote(s) || <a href="/post/{{id}}">{{comments.length}} comment(s) </a>
        </div>

<!--create html to show how it would appear to edit an old post, should include the post itself along with any comments-->

<article>
                <a href="/dashboard"> &larr; Back to dashboard</a>
                <h2 class="title has-text-white">
                  Edit Post
                </h2>
                <form class="edit-post-form has-text-white">
                  <div class="box has-background-black">
                    <input name="post-title" type="text" value="{{post.title}}" class="" />
                    <br>
                    <span>({{format_url post.post_url}})</span>
                    
                  </div>
                  <div class="box has-background-black">
                      <section>
                         {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}} 
                      </section>
                      <section>
                        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>  
                      </section>
                    
                  </div>
                  <button type="submit" class="button is-small has-background-info"><strong>save post</strong></button>
                  <button type="button" class="button is-small has-background-info"><strong>delete post</strong></button>
                </form>
              </article>
              <br>
              
              <div class="box has-background-black">
                <h3 class="title is-size-5 has-text-white">Add Comment</h3>
                <form class="comment-form">
                <div>
                  <textarea name="comment-body" class="textarea"></textarea>
                </div>
              
                <div>
                  <button type="submit" class="button is-small has-background-info"><strong>add comment</strong></button>
                </div>
              </form>  
              </div>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>